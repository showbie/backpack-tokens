{
  "name": "@showbie/backpack-tokens",
  "description": "Design tokens for Showbie Backpack",
  "license": "ISC",
  "author": "Showbie (https://www.showbie.com)",
  "maintainers": [
    "Jeff Nelson @stormwarning (https://www.showbie.com)"
  ],
  "homepage": "https://design.showbie.com",
  "repository": "showbie/backpack-tokens",
  "version": "0.2.0",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "node -r esm lib/index.js",
    "deploy": "np && yarn podspec:deploy",
    "docs:build": "vuepress build docs",
    "docs:deploy": "now && now --target production",
    "docs:dev": "vuepress dev docs",
    "lint": "prettier-eslint '**/*.js' --list-different",
    "now-build": "npm run docs:build",
    "podspec:deploy": "pod repo push showbie",
    "podspec:ver": "replace \"s\\.version = '\\d+\\.\\d+\\.\\d+'\" \"s.version = '$npm_package_version'\" ./BackpackTokens.podspec",
    "version": "yarn build && yarn podspec:ver && git add -A dist BackpackTokens.podspec"
  },
  "devDependencies": {
    "@showbie/eslint-config": "^0.4.1",
    "chroma-js": "^2.0.6",
    "color-name-list": "^4.10.0",
    "eslint": "^6.3.0",
    "esm": "^3.2.25",
    "handlebars": "^4.1.2",
    "nearest-color": "^0.4.4",
    "replace": "^1.1.1",
    "vuepress": "^1.0.4"
  },
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
